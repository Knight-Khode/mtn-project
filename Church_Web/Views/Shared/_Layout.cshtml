<!DOCTYPE html>
<html lang="en">
<head>
    <title>@(ViewBag.Title == null ? "Welcome" : ViewBag.Title) | MTN Church Portal</title>
    <meta name="description" content="MTN Liberia Church Web Portal" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-content">
                <div class="nav-logo">
                    <img src="~/image/logo.jpeg" />
                </div>
                <div class="nav-links">
                    <div class="dropdown">
                        <a href="/#" id="signing-in" class="nav-margin">
                            Login
                        </a>
                    </div>
                    <a href="/#" id="signing-up" class="nav-margin">
                    Signup
                    </a>
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()
  
    <footer class="border-top footer text-muted" style=" background-color: rgb(250, 205, 3);">
        <div class="container">
            MTN Liberia &copy; @DateTime.Now.Year All Rights Reserved - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
